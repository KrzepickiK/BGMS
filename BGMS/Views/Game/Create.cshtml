@model BGMS_Repository.DTO.GameDTO

<h1>Add new game to the list</h1>
@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.EditorForModel()
    <a href="@Url.Action("Index", "Game")" class="btn btn-info">Back to the list</a>
    <button type="submit" class="btn btn-success">Add game</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

